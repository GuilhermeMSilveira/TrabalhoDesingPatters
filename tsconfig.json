{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest"],                // <-- Adicionado para Jest
    "moduleResolution": "node"       // <-- Recomendado para Jest + Node
  },
  "include": ["src", "**/*.test.ts"]  // <-- Inclui testes no projeto
}
